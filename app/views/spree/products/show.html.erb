<% @body_id = 'product-details' %>
<% cache [I18n.locale, current_currency, @product, @product.possible_promotions] do %>

  <div data-hook="product_show" class="product row" itemscope itemtype="https://schema.org/Product">
    <div class="col m6 s12" data-hook="product_left_part">
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body center-align
              <%= 'dcto-' + @product.discount_value.to_s unless @product.discount_value === nil %>
            ">
              <%= render :partial => 'image' %>
            </div>
          </div>
          <div id="thumbnails" data-hook>
            <%= render :partial => 'thumbnails' %>
          </div>
        </div>
        <div class="share">
            <div class="sharethis-inline-share-buttons"></div>
        </div>
    </div>
    </div>
    <div class="col m6 s12" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
          <%= content_tag(:h2, @product.sku) if @product.taxons.find_by(id: 39) %>

          <div class="well" itemprop="description" data-hook="description">
            <p><%= product_description(@product) rescue Spree.t(:product_has_no_description) %></p>
          </div>
          <div data-hook="product_properties">
            <%= render :partial => 'properties' %>
          </div>
          <div data-hook="promotions">
            <%= render :partial => 'promotions' %>
          </div>
          <div id="cart-form" data-hook="cart_form">
            <%= render :partial => 'cart_form' %>
          </div>
        </div>
      </div>
    </div>

  </div>
      <%= render :partial => 'taxons' %>
<% end %>
<script type='text/javascript' src='//platform-api.sharethis.com/js/sharethis.js#property=58f8e7f0caaba30012e7e362&product=sticky-share-buttons' async='async'></script>