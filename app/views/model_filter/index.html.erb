  <div class="row">
    <!-- Travel -->
    <% if @travel %>
    <div class="col m6 s12">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag "bikes/travel-white.jpg", :class => 'activator' %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">BIG TRAIL<i class="fa fa-angle-double-up right" aria-hidden="true"></i></span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Modelos<i class="material-icons right">close</i></span>
          <div class="collection">
            <% @travel.each do |taxon| %>
              <% if Spree::Product.in_taxon(taxon).any? %>
                <%= link_to taxon.name, seo_url(taxon), class: 'collection-item' %>
              <% end %>
            <% end %>
            <%= link_to 'TODAS', @all_path, class: 'collection-item' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
