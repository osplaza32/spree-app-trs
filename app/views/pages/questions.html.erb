      <div class="overlay"></div>
      <ul class="categoriesGral">
        <li><a href="#consultas"><h2>CONSULTAS</h2></a></li>
      </ul>
       <img class="ktmBottom" src="<%= image_url "ktm_home.png" %>" alt="KTM">
       <div class="parallax"><%= image_tag "bg-parallax.jpg" %></div>
   </div>
  </section>
